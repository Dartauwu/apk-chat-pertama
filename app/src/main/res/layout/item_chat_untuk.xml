<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_chat_untuk_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/tv_pesan_untuk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_chat_untuk"
        android:maxHeight="250dp"
        android:minHeight="50dp"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"

        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:text="gyfyfutdiygiuykdbvrvb6"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_chat_untuk_photo"
        app:layout_constraintEnd_toStartOf="@id/iv_chat_untuk_photo"
        app:layout_constraintTop_toTopOf="@id/iv_chat_untuk_photo" />


</androidx.constraintlayout.widget.ConstraintLayout>





















