<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_chat_dari_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/tv_pesan_dari"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_dari"
        android:minHeight="50dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:text="gyfyfutdiygiuykdbvrvb6"
        android:maxHeight="250dp"

        app:layout_constraintStart_toEndOf="@id/iv_chat_dari_photo"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/iv_chat_dari_photo"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_chat_dari_photo"
        android:layout_marginLeft="12dp"
        android:paddingRight="20dp"
        android:paddingLeft="15dp" />


</androidx.constraintlayout.widget.ConstraintLayout>





















